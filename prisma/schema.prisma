generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int       @id @default(autoincrement())
  name                String
  password            String
  email               String    @unique
  role                Role
  teamId              Int?
  supervisorId        Int?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  @@map("user")
}

model Team {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  memberIDs Int[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Semester {
  SPRING
  SUMMER
  FALL
}

model Evaluation {
  id            Int       @id @default(autoincrement())
  studentId     Int
  supervisorId  Int?
  semester      Semester
  type          Role
  criteria      Json
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

enum Role {
  SUPERVISOR
  STUDENT
}